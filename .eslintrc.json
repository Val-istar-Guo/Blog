{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },

  "ignore": [ "node_modules" ],

  "import/no-extraneous-dependencies": ["error", {
    "devDependencies": [
      "webpack.config.js",
      "webpack.config.*.js"
    ],
    "optionalDependencies": false
  }]
}
